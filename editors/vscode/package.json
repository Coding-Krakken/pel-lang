{
  "name": "pel-vscode",
  "displayName": "PEL Language Support",
  "description": "Language support for PEL (Programmable Economic Language)",
  "version": "0.1.0",
  "publisher": "pel-lang",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "pel",
    "economic modeling",
    "financial modeling",
    "business modeling"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Coding-Krakken/pel-lang"
  },
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "pel",
        "aliases": [
          "PEL",
          "pel"
        ],
        "extensions": [
          ".pel"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pel",
        "scopeName": "source.pel",
        "path": "./syntaxes/pel.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "PEL",
      "properties": {
        "pel.server.path": {
          "type": "string",
          "default": "pel",
          "description": "Path to PEL executable"
        },
        "pel.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  }
}
