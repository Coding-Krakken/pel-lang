{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "PEL",
  "scopeName": "source.pel",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.pel",
          "match": "//.*$"
        },
        {
          "name": "comment.block.pel",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.pel",
          "match": "\\b(if|else|for|in|return)\\b"
        },
        {
          "name": "keyword.declaration.pel",
          "match": "\\b(model|param|rate|constraint|mechanism|provenance)\\b"
        },
        {
          "name": "keyword.other.pel",
          "match": "\\b(source|rationale|confidence|per|over)\\b"
        },
        {
          "name": "constant.language.pel",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.pel",
          "match": "\\b(Currency|Rate|Duration|Count|Capacity|Fraction|TimeSeries|Distribution|Boolean|Array|String|Int)\\b"
        },
        {
          "name": "support.type.pel",
          "match": "\\b(Normal|Uniform|Beta|LogNormal)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.pel",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.pel",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.pel",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.pel",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.pel",
          "match": "\\b\\d+(\\.\\d+)?([eE][+-]?\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.pel",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.comparison.pel",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.pel",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.assignment.pel",
          "match": "="
        },
        {
          "name": "keyword.operator.arrow.pel",
          "match": "->"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.pel",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
        }
      ]
    }
  }
}
